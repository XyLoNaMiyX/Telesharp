<UserControl x:Class="Telesharp.DialogCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Telesharp"
             MaxHeight="64" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image x:Name="photo" Grid.Column="0" Width="50" Height="50" />
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <TextBlock x:Name="dialogName" FontWeight="SemiBold" />
            <TextBlock x:Name="topMessage" Foreground="#9E9E9E" TextTrimming="CharacterEllipsis" />
        </StackPanel>
    </Grid>
</UserControl>
